<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.2" orientation="VERTICAL" xmlns="http://javafx.com/javafx/8.0.92" xmlns:fx="http://javafx.com/fxml/1">
   <items>
      <AnchorPane prefHeight="100.0" styleClass="background_style" SplitPane.resizableWithParent="false">
         <children>
            <GridPane prefWidth="214.0" styleClass="sub_background" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="10000.0" minWidth="10.0" prefWidth="50.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="10000.0" minWidth="10.0" prefWidth="50.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="10000.0" minWidth="10.0" prefWidth="50.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="10000.0" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Bar Code:" />
                  <Label text="Amount:" GridPane.rowIndex="1" />
                  <Label text="Name:" GridPane.rowIndex="2" />
                  <Label text="Price" GridPane.rowIndex="3" />
                  <Button fx:id="addItemButton" alignment="CENTER" mnemonicParsing="false" onAction="#addProductButtonClicked" text="Add product" GridPane.Halignment="CENTER" GridPane.Valignment="CENTER" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="2" GridPane.rowSpan="2" />
                  <TextField fx:id="barCodeField" GridPane.columnIndex="1" />
                  <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
         </children>
      </AnchorPane>
      <TitledPane alignment="CENTER" animated="false" collapsible="false" text="Warehouse status">
        <BorderPane>
          <center>
            <TableView fx:id="warehouseTableView" styleClass="blue_style" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn text="Id">
                  <cellValueFactory>
                    <PropertyValueFactory property="id" />
                  </cellValueFactory>
                </TableColumn>
                <TableColumn text="Name">
                  <cellValueFactory>
                    <PropertyValueFactory property="name" />
                  </cellValueFactory>
                </TableColumn>
                <TableColumn text="Price">
                  <cellValueFactory>
                    <PropertyValueFactory property="price" />
                  </cellValueFactory>
                </TableColumn>
                <TableColumn text="Quantity">
                  <cellValueFactory>
                    <PropertyValueFactory property="quantity" />
                  </cellValueFactory>
                </TableColumn>
              </columns>
              <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
              </columnResizePolicy>
            </TableView>
          </center>
          <top>
               <HBox BorderPane.alignment="TOP_LEFT">
                  <children>
                  <Button onMouseClicked="#refreshButtonClicked" text="Refresh warehouse" />
                     <Button fx:id="deleteItem" mnemonicParsing="false" onAction="#deleteItemButtonClicked" text="Delete">
                        <HBox.margin>
                           <Insets left="150.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
          </top>
        </BorderPane>
      </TitledPane>
   </items>
</SplitPane>
